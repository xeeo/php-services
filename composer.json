{
    "name"        : "xeeo/services",
    "description" : "This is a Service layer Library including common Services like Database Mappers (ORM, ODM), Authentication etc.",
    "type"        : "library",
    "version"     : "0.5.0",
	"authors"     : [
		{
			"name"     : "Geana Raul",
			"email"    : "geana.raul@icloud.com",
            "homepage" : "https://github.com/xeeo/"
		}
	],
    "require"     : {
        "php"       : ">=5.5.0",
        "ext-mongo" : ">=1.4.0",
        "ext-pdo"   : "*"
    },
    "require-dev": {
        "phpunit/phpunit" : "3.7.*",
        "zf1/zend-auth"   : ">=1.12.8",
        "zf1/zend-session": ">=1.12.8"
    },
    "suggest" : {
        "zf1/zend-auth"    : ">=1.12.8",
        "zf1/zend-session" : ">=1.12.8"
    },
	"autoload"    : {
		"psr-0"   : {
			"Xeeo\\Services\\": "src/"
		}
	},
    "include-path"      : [ "src/" ],
	"minimum-stability" : "dev"
}
